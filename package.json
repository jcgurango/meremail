{
  "name": "meremail-monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"pnpm -F @meremail/server dev\" \"pnpm -F @meremail/web dev\"",
    "dev:server": "pnpm -F @meremail/server dev",
    "dev:web": "pnpm -F @meremail/web dev",
    "build": "pnpm -F @meremail/shared build && pnpm -F @meremail/web build && pnpm -F @meremail/server build",
    "start": "pnpm -F @meremail/server start",
    "db:generate": "pnpm -F @meremail/shared db:generate",
    "db:migrate": "pnpm -F @meremail/shared db:migrate",
    "mail:import": "pnpm -F @meremail/server mail:import",
    "mail:folders": "pnpm -F @meremail/server mail:folders",
    "mail:demo": "pnpm -F @meremail/server mail:demo",
    "db:backup": "pnpm -F @meremail/server db:backup",
    "reset": "rm -rf data/* && pnpm db:migrate"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "typescript": "^5.9.3"
  }
}
